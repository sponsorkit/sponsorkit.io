{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "plugins": [{
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "dotenvOptions": {},
          "postCssOptions": {},
          "rendererOptions": {}
        }
      }],
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "es2017"],
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true
    }
}